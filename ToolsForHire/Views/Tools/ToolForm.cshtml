@model ToolsForHire.ViewModels.ToolFormViewModel
@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>

@using (Html.BeginForm("Save", "Tools"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.NoInStock)
        @Html.TextBoxFor(m => m.NoInStock, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.NoInStock)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.CategoryTypeId)
        @Html.DropDownListFor(m => m.CategoryTypeId, new SelectList(Model.CategoryTypes, "Id", "Name"), "Select Category Type", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.CategoryTypeId)
    </div>

    @Html.HiddenFor(m => m.Id)
    @Html.AntiForgeryToken()
    <button class="btn btn-primary" type="submit">Save</button>

}


@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")    
}
